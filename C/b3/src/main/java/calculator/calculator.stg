group modules;

typeValue ::= [
   "+":"add",
   "-":"subtract",
   "*":"multiply",
   "/":"divide",
   "%":"remainder"
]

main(fileName, lines) ::= <<
import java.math.BigInteger;

public class <fileName> {
    public static void main(String[] args) {
        <lines;separator="\n">
    }
}
>>

block(lines) ::= <<
<lines;separator="\n">
>>

operation(varName, var1, op, var2, block) ::= <<
<block>
BigInteger <varName> = <var1>.<typeValue.(op)>(<var2>);
>>

tempDeclaration(varName,value) ::= <<
BigInteger <varName> = BigInteger.valueOf(<value>);
>>

valueChange(varName,value,block) ::= <<
<block>
<varName> = <value>;
>>

declarationCopy(varName, value,block) ::= <<
<block>
BigInteger <varName> = <value>;
>>

print(label,value,block) ::= <<
<block>
System.out.printf("%s = %d %n","<label>",<value>.intValue());
>>
